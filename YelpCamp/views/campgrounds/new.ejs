<% include ../partials/header.ejs  %>

<div class="container">
	
	<div class="row">
		<h1 style="text-align: center;">Create new CampGround</h1>

		<div style="width: 30%; margin: 25px auto">

			<form  action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="enter camp name" required />
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="imageurl" placeholder="enter image url" required />
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="enter description" required />
				</div>
				
				<div class="form-group">
					<input class="btn btn-lg btn-primary" type="submit" />
				</div>
				
				
			</form>

			<a href="/campgrounds">Go Back</a>
		</div>
	</div>	
	


</div>





