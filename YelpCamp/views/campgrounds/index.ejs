<% include ../partials/header.ejs  %>


<div class="container">
	


	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>Choose from our large collections of camps from worldwide.</p>
			<a class="btn btn-lg btn-primary" href="/campgrounds/new">Add new CampGround</a>
		</div>
			
	</header>

	<div class="row text-center" style="display: flex;flex-wrap: wrap;">
		
		<% campgrounds.forEach(function(campdata){  %>

		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				
				<img src="<%= campdata.image %>">
				<div class="caption">
					<h4><strong><%= campdata.name %></strong></h4>
				</div>
				<a  class="btn btn-primary" href="/campgrounds/<%= campdata._id%>">Show Info</a>
			</div>
		</div>


		<% }) %>	

	</div>
	

	
</div>


<% include ../partials/footer.ejs  %>